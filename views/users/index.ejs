<% include ../partials/header %>
    <% include ../partials/head %>


        <!-- partial:partials/_sidebar.html -->
        <% include ../partials/sidebar %>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <% include ../partials/message %>
                                        <div class="card-title"
                                            style="display: flex; justify-content: space-between; align-items: center;">
                                            <h4 class="card-title">All Users</h4>

                                            <div class="card-button">
                                                <a href="/users/add">
                                                    <button class="btn btn-primary btn-sm font-weight-medium">Add
                                                        Users</button>
                                                </a>
                                            </div>
                                        </div>

                                        <div class="table-responsive pt-3">
                                            <table class="table table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            #
                                                        </th>
                                                        <th>
                                                            User Name
                                                        </th>
                                                        <th>
                                                            User Username
                                                        </th>
                                                        <th>
                                                            User Email
                                                        </th>
                                                        <th>
                                                            Actions
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for(let i=0; userslist.length> i; i++){
                                                        let lists = userslist[i];
                                                        %>
                                                        <tr>
                                                            <td>
                                                                <%= i+1 %>
                                                            </td>
                                                            <td>
                                                                <%= lists.name %>
                                                            </td>
                                                            <td>
                                                                <%= lists.username %>
                                                            </td>
                                                            <td>
                                                                <%= lists.email %>

                                                                    <span
                                                                        style="display: inline-block; padding: 5px; background-color: green; font-size: 12px; color: #fff; font-weight: bolder; margin-left: 4px; text-transform: uppercase;">
                                                                        <%= lists.status %>
                                                                    </span>

                                                            </td>
                                                            <td
                                                                style="display: flex; justify-content: flex-start; align-items: center;">
                                                                <a href="/users/edit/<%= lists._id; %>"
                                                                    style="text-decoration: none;">
                                                                    <button
                                                                        class="btn btn-primary btn-sm font-weight-medium">
                                                                        Edit</button>
                                                                </a>
                                                                &nbsp;
                                                                <form
                                                                    action="/users/delete/<%= lists._id; %>?_method=delete"
                                                                    method="post">
                                                                    <button
                                                                        class="btn btn-danger btn-sm font-weight-medium">
                                                                        Delete</button>
                                                                </form>

                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                </tbody>
                                            </table>
                                        </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <% include ../partials/footer %>