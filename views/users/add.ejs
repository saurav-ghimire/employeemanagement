<% include ../partials/header %>
    <% include ../partials/head %>


        <!-- partial:partials/_sidebar.html -->
        <% include ../partials/sidebar %>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <% include ../partials/message %>
                                        <div class="card-title"
                                            style="display: flex; justify-content: space-between; align-items: center;">
                                            <h4 class="card-title">Create Users</h4>
                                            <div class="card-button">
                                                <a href="/users/">
                                                    <button class="btn btn-primary btn-sm font-weight-medium">View All
                                                        Users</button>
                                                </a>
                                            </div>
                                        </div>
                                        <div>
                                            <form action="/users/add" method="POST">
                                                <div class="form-group">

                                                    <input type="text" class="form-control form-control-lg"
                                                        id="exampleInputUsername1" placeholder="Name" name="name"
                                                        value="<%= inputData && inputData.name ? inputData.name : '' %>" />
                                                </div>
                                                <div class="form-group">

                                                    <input type="text" class="form-control form-control-lg"
                                                        placeholder="User Username" name="username"
                                                        value="<%= inputData && inputData.username ? inputData.username : '' %>">
                                                </div>
                                                <div class="form-group">

                                                    <input type="email" class="form-control form-control-lg"
                                                        placeholder="User email" name="email"
                                                        value="<%= inputData && inputData.email ? inputData.email : '' %>">
                                                </div>
                                                <div class="form-group">

                                                    <input type="password" class="form-control form-control-lg"
                                                        placeholder="User password" name="password"
                                                        value="<%= inputData && inputData.password ? inputData.password : '' %>">
                                                </div>
                                                <div class="form-group">
                                                    <button
                                                        class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn"
                                                        type="submit">Create</button>
                                                </div>
                                            </form>
                                            <hr>
                                            <a href="/users/">
                                                <button class="btn btn-block btn-danger btn-lg font-weight-medium "
                                                    type="submit">Back</button>
                                            </a>
                                        </div>



                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <% include ../partials/footer %>