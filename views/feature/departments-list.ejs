<% include ../partials/header %>
    <% include ../partials/head %>


        <!-- partial:partials/_sidebar.html -->
        <% include ../partials/sidebar %>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <% include ../partials/message %>
                                        <div class="card-title"
                                            style="display: flex; justify-content: space-between; align-items: center;">
                                            <h4 class="card-title">All Departments</h4>
                                            <div class="card-button">
                                                <a href="/departments">
                                                    <button class="btn btn-primary btn-sm font-weight-medium">Add
                                                        Departments</button>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="table-responsive pt-3">
                                            <table class="table table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            #
                                                        </th>
                                                        <th>
                                                            Department Name
                                                        </th>
                                                        <th>
                                                            Actions
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for(let i=0; departments.length> i; i++){
                                                        let store = departments[i];
                                                        %>
                                                        <tr>
                                                            <td>
                                                                <%= i+1; %>
                                                            </td>
                                                            <td>
                                                                <%= store.title %>
                                                            </td>
                                                            <td
                                                                style="display: flex; justify-content: flex-start; align-items: center;">
                                                                <a href="/departments-edit/<%= store._id; %>"
                                                                    style="text-decoration: none;">
                                                                    <button
                                                                        class="btn btn-primary btn-sm font-weight-medium">
                                                                        Edit</button>
                                                                </a>
                                                                &nbsp;
                                                                <form
                                                                    action="/departments-delete/<%= store._id; %>?_method=delete"
                                                                    method="post">
                                                                    <button
                                                                        class="btn btn-danger btn-sm font-weight-medium">
                                                                        Delete</button>
                                                                </form>

                                                            </td>

                                                        </tr>
                                                        <% } %>
                                                </tbody>
                                            </table>
                                        </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <% include ../partials/footer %>